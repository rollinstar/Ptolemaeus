{
    "compilerOptions": {
        "target": "es2017",
        "jsx": "react",
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "./",
        "shared/*": ["../../shared/*"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "types": ["node"]
    }
}
